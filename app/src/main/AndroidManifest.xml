<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Controlefinanceiro"
        tools:targetApi="31">

        <!-- MainActivity usa Compose e tema Material3 -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Controlefinanceiro">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Activities que usam AppCompat precisam de tema AppCompat -->
        <activity
            android:name="com.example.controle_financeiro.ui.despesa.DespesaActivity"
            android:theme="@style/Theme.Controlefinanceiro.AppCompat" />
        <activity
            android:name="com.example.controle_financeiro.ui.renda.RendaActivity"
            android:theme="@style/Theme.Controlefinanceiro.AppCompat" />
        <activity
            android:name="com.example.controle_financeiro.ui.planejamento.PlanejamentoActivity"
            android:theme="@style/Theme.Controlefinanceiro.AppCompat" />

        <!-- Login -->
        <activity android:name=".LoginActivity" />

        <!-- Despesa -->
        <activity android:name=".ui.despesa.MenuDespesasActivity" />
        <activity android:name=".ui.despesa.ListarDespesasActivity" />
        <activity android:name=".ui.despesa.EditarDespesaActivity" />


        <!-- Categoria -->
        <activity android:name=".ui.categoria.MenuCategoriaActivity" />
        <activity android:name=".ui.categoria.CategoriaActivity" />
        <activity android:name=".ui.categoria.ListarCategoriaActivity" />
        <activity android:name=".ui.categoria.EditarCategoriaActivity" />

        <!-- MÃ©todo de Pagamento -->
        <activity android:name=".ui.metodopagamento.MenuMetodoPagamentoActivity" />
        <activity android:name=".ui.metodopagamento.MetodoPagamentoActivity" />
        <activity android:name=".ui.metodopagamento.ListarMetodoPagamentoActivity" />
        <activity android:name=".ui.metodopagamento.EditarMetodoPagamentoActivity" />

        <!-- Gerenciar Rendas -->
        <activity android:name=".ui.renda.MenuRendaActivity" />
        <activity android:name=".ui.renda.ListarRendaActivity" />
        <activity android:name=".ui.renda.EditarRendaActivity" />


    </application>

</manifest>
